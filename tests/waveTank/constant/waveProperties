//length	2; 	//Must be specified if uType = 0, else not used

//seabedHeight	-0.3; 	//default = lowest point on patch

//waveMakerPos	0; 	//default = backmost point on patch

phase		 0.75;	//default = 0.0 giving wave starting at crest, 0.5 gives wave starting at trough, 0.75 is suitable for starting without ramp up.

